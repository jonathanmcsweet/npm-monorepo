{
  "name": "simple-monorepo",
  "description": "A Node.js CLI utility for building simple monorepos with NPM",
  "version": "1.0.3",
  "main": "src/index.js",
  "repository": "git@github.com:jonathanmcsweet/npm-monorepo.git",
  "author": "Jonathan McSweet <jonathanmcsweet@gmail.com>",
  "license": "MIT",
  "bin": {
    "simple-monorepo": "bin/simple-monorepo"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "scripts": {
    "commit": "git-cz",
    "format": "prettier-eslint --write \"{src,test}/**/*.js\"",
    "lint": "eslint bin src test",
    "release": "semantic-release --access public",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "find-config": "^1.0.0",
    "glob-promise": "^3.4.0",
    "lnk": "^1.1.0",
    "rimraf": "^2.6.3",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@transclusion/semantic-release": "^0.2.5",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^22.4.4",
    "pre-commit": "^1.2.2",
    "prettier-eslint-cli": "^4.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testRegex": "(\\.|/)spec\\.js$",
    "verbose": true
  }
}
